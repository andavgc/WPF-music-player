        <Border Grid.Row="1" Background="#84A7A1"/>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Viewbox Stretch="Uniform">
                <Image Source="C:\Users\USER\Documents\WPF music player\Assets\album_cover.png"/>
            </Viewbox>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Viewbox Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Stretch" Margin="30, 0">
                    <Image Source="C:\Users\USER\Documents\WPF music player\Assets\previous.png" />
                </Viewbox>  
                <Viewbox Width="80" Height="80" Stretch="Uniform" VerticalAlignment="Stretch" Margin="30, 0">
                    <Image Source="C:\Users\USER\Documents\WPF music player\Assets\play.png" />
                </Viewbox> 
                <Viewbox Width="40" Height="40" Stretch="Uniform" VerticalAlignment="Stretch" Margin="30, 0">
                    <Image Source="C:\Users\USER\Documents\WPF music player\Assets\next.png" />
                </Viewbox>
        </StackPanel>
    </Grid>
</Window>
