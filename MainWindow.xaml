<Window x:Class="WPF_music_player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_music_player"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="2*"/>
        <RowDefinition Height="*"/>
        </Grid.RowDefinitions> 
        <Border Grid.Row="0" Background="#0E2954"/>
        <Border Grid.Row="1" Background="#84A7A1"/>

        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Viewbox Stretch="Uniform">
                <Image Source="C:\Users\USER\Documents\WPF music player\Assets\album_cover.png"/>
            </Viewbox>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Viewbox Width="50" Height="20" Stretch="Uniform" >
                        <TextBlock Foreground="Black" FontSize="20" Text="0:00"/>
                </Viewbox>
                <Viewbox Width="350" Height="20" Stretch="Uniform" HorizontalAlignment="left">
                    <Grid>
                        <Image Source="C:\Users\USER\Documents\WPF music player\Assets\duration.png" />
                        <Image x:Name="timeLapse" Source="C:\Users\USER\Documents\WPF music player\Assets\timeLapse.png" Margin="0"/>
                    </Grid>
                </Viewbox> 
                <Viewbox Width="50" Height="20" Stretch="Uniform" >
                        <TextBlock Foreground="Black" FontSize="20" Text="5:00"/>
                </Viewbox>  
            </StackPanel>
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0, 0, 0, 10">
                <Viewbox Height="15" Stretch="Uniform" >
                    <TextBlock Foreground="Black" FontSize="10" Name="SongName" Text="The bends" />
                </Viewbox>

                <Viewbox Height="15" Stretch="Uniform" >
                    <TextBlock Foreground="Black" FontSize="10" Text=" - " />
                </Viewbox>
                <Viewbox Height="15" Stretch="Uniform">
                    <TextBlock Foreground="Black" FontSize="10" Name="ArtistName" Text="Radiohead" />
                </Viewbox>
            </StackPanel>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">

                <Viewbox Width="40" Height="40" Stretch="Uniform" Margin="30, 0">
                <Button Click="Play_Click" Background="Transparent" BorderBrush="Transparent" >
                    <Image Source="C:\Users\USER\Documents\WPF music player\Assets\previous.png" />
                </Button>
                </Viewbox>
             
                <Viewbox Width="80" Height="80" Stretch="Uniform" Margin="30, 0">
                    <Button Click="Play_Click" Background="Transparent" BorderBrush="Transparent" >
                        <Image Source="C:\Users\USER\Documents\WPF music player\Assets\play.png" />
                    </Button>
                </Viewbox> 
            
                <Viewbox Width="40" Height="40" Stretch="Uniform" Margin="30, 0">
                <Button Click="Play_Click" Background="Transparent" BorderBrush="Transparent" >
                    <Image Source="C:\Users\USER\Documents\WPF music player\Assets\next.png" />
                </Button>
                </Viewbox>
            </StackPanel>

        </StackPanel>

        
    </Grid>
</Window>
